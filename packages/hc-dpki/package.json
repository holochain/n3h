{
  "name": "@holochain/hc-dpki",
  "version": "0.0.1",
  "description": "holochain key management libraries and utilities",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard --fix 'lib/**/*.js' 'bin/**/*.js'",
    "mocha": "mocha lib/**/*.test.js bin/**/*.test.js",
    "nyc": "nyc npm run mocha",
    "test": "npm run lint && npm run nyc",
    "show-coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.4.0",
    "sinon": "^7.1.1",
    "standard": "^12.0.1"
  },
  "dependencies": {
    "bip39": "^2.5.0",
    "@holochain/mosodium": "^0.0.1",
    "msgpack-lite": "^0.1.26",
    "@holochain/n3h-common": "^0.0.1",
    "@holochain/n-bch-rs": "^0.0.4",
    "prompt": "^1.0.0"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  },
  "generate-docs": {
    "util": "lib/util.js",
    "keypair": "lib/keypair.js",
    "seed": "lib/seed.js"
  }
}
