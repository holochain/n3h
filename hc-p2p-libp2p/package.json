{
  "name": "hc-p2p-libp2p",
  "version": "0.0.1",
  "description": "the libp2p version of the holochain networking / p2p process",
  "main": "lib/index.js",
  "scripts": {
    "lint": "standard --fix 'lib/**/*.js' 'bin/**/*.js'",
    "mocha": "mocha 'lib/**/*.test.js' 'bin/**/*.test.js'",
    "nyc": "nyc npm run mocha || true",
    "test": "npm run lint && npm run nyc",
    "show-coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.3.0",
    "sinon": "^6.1.4",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "@nodeutils/defaults-deep": "^1.1.0",
    "libp2p": "^0.23.1",
    "libp2p-kad-dht": "^0.10.2",
    "libp2p-mplex": "^0.8.0",
    "libp2p-secio": "^0.10.0",
    "libp2p-spdy": "^0.12.1",
    "libp2p-tcp": "^0.12.1",
    "msgpack-lite": "^0.1.26",
    "ipc": "file:../ipc",
    "peer-id": "^0.11.0",
    "pull-stream": "^3.6.9"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
