{
  "name": "n3h",
  "version": "0.0.1",
  "description": "nodejs implementation of the lib3h p2p protocol",
  "main": "lib/index.js",
  "scripts": {
    "docs": "jsdoc2md lib/ipc/server.js > docs/ipc/server.md && jsdoc2md lib/ipc/client.js > docs/ipc/client.md",
    "test": "standard --fix '**/*.js' && npm run docs && nyc ./node_modules/mocha/bin/mocha 'lib/**/*.test.js'",
    "coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.1.2",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^5.2.0",
    "nyc": "^12.0.2",
    "opn": "^5.3.0",
    "sinon": "^6.1.4",
    "standard": "^11.0.1"
  },
  "dependencies": {
    "msgpack-lite": "^0.1.26",
    "sodium-native": "^2.1.6",
    "zeromq": "^4.6.0"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "all": true,
    "include": [
      "./lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
