{
  "name": "n3h",
  "version": "0.0.17-alpha",
  "description": "nodejs holochain networking library with swapable / configurable modules",
  "repository": "github:holochain/n3h",
  "bin": {
    "n3h": "bin/n3h"
  },
  "scripts": {
    "lint": "standard",
    "lint-fix": "standard --fix",
    "mocha": "mocha --recursive lib tools",
    "docs": "node ./bin/gen-docs",
    "nyc": "nyc npm run mocha",
    "test": "npm run lint && npm run nyc && npm run docs",
    "show-coverage": "node -e \"require('opn')('coverage/lcov-report/index.html')\""
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "chai": "^4.2.0",
    "jsdoc-to-markdown": "^4.0.1",
    "mocha": "^5.2.0",
    "nyc": "^14.0.0",
    "opn": "^5.4.0",
    "prompt": "^1.0.0",
    "sinon": "^7.1.1",
    "standard": "^12.0.1",
    "tmp": "0.0.33",
    "tmp-promise": "1.0.5"
  },
  "dependencies": {
    "@holochain/hcid-js": "^0.0.5",
    "bip39": "^2.5.0",
    "bs58": "^4.0.1",
    "express": "^4.16.4",
    "express-ws": "^4.0.0",
    "helmet": "^3.15.0",
    "msgpack-lite": "^0.1.26",
    "multicast-dns": "github:holochain/multicast-dns",
    "node-forge": "^0.7.6",
    "sodium-native": "2.3.0",
    "ws": "^6.1.2"
  },
  "standard": {
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "/* TODO - Set check-coverage to true */": "",
    "check-coverage": false,
    "per-file": false,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "reporter": [
      "lcov",
      "text-summary"
    ]
  }
}
